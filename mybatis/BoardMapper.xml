<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.BoardMapper.xml">
	<insert id="boardInsert" parameterType="problem.DDBoard.BoardDTO">
		INSERT INTO tbl_board(bno, title, content, writer)
		VALUES(seq_board.NEXTVAL, #{title}, #{content}, #{writer})
	</insert>	
	
	<update id="boardUpdate" parameterType="problem.DDBoard.BoardDTO">
		UPDATE tbl_board SET
			title = #{title},
			content = #{content},
			writer = #{writer}
		WHERE bno = #{bno}
	</update>
	
	<update id ="viewCntPlus" parameterType="Integer">
		UPDATE tbl_board SET			
			viewcnt = viewcnt + 1
		WHERE bno = #{bno}
	</update>
	
	
	<delete id="boardDelete" parameterType="Integer">
		DELETE FROM tbl_board
		WHERE bno = #{bno}
	</delete>
	
	<select id="boardSelect" resultType="problem.DDBoard.BoardDTO">
		SELECT * FROM tbl_board
	</select>
	
	<select id="boardSearch" resultType="problem.DDBoard.BoardDTO">
		SELECT * FROM tbl_board
		WHERE title like #{search} 
	</select>
	
	<select id="boardSort" resultType="problem.DDBoard.BoardDTO">
		SELECT * FROM tbl_board
		<if test="column == 1">
			ORDER BY bno
		</if>		
		<if test="column == 2">
			ORDER BY regdate
		</if>
		<if test="column == 3">
			ORDER BY viewcnt
		</if>
		<if test="order == 1">
			ASC
		</if>
		<if test="order == 2">
			DESC
		</if>		   
	</select>
	
	<select id="boardView" resultType="problem.DDBoard.BoardDTO">
		SELECT * FROM tbl_board
		WHERE bno= #{bno} 
	</select>
</mapper>